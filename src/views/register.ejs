<!-- ======================== HEAD || CONFIGURACION ARCHIVO HTML ======================== -->

<!-- =================== BODY || MAQUETADO DEL ARCHIVO HTML (Header, Main, Footer) =================== -->

<%- include('./partials/head', {title:"REGISTER"}) %> 

<body class="general_body">
    <!-- ======================== BODY || MAQUETADO DEL HEADER ======================== -->
    <%- include('./partials/header') %>

    <!-- ======================== BODY || MAQUETADO DEL MAIN ======================== -->
    <main class="general_main">
        <div class="register_return">
            <a href="/">Inicio</a>
            <span>/Registro</span>
        </div>
        <section class="register_section">
            <header class="register_section-header" >
                <h1>registrate</h1>
            </header>
            <main class="register_section-main">
                <div class="register_section_main-option">
                    <div class="reg_sec_main_opt-reg">
                        <a href="../users/register">Registrarse</a>
                    </div>
                    <div class="reg_sec_main_opt-log">
                        <a href="../users/login">Iniciar Sesión</a>
                    </div>
                </div>
                <div class="register_section_main-correo">
                    <button> <i class="fa-brands fa-google"></i> GOOGLE</button>
                    <P>registrate con el correo electrónico</P>
                </div>
                <form action="process" class="register_section_main-form" id="register_section_main-form" method="post">
                    <div class="reg_sec_main_form-container">
                        <input type="text" name="firstName" id="firstName" placeholder="ingrese su nombre" value="<%= locals.old && old.firstName ? old.firstName : null %>">
                        <span class="login_error"> <%= locals.errors && errors.firstName ? errors.firstName.msg : null  %>  </span>
                        <span id="errorNombre" class="login_error"></span>
                    </div>
                    <div class="reg_sec_main_form-container">
                        <input type="text" name="lastName" id="lastName" placeholder="ingrese apellido" value="<%= locals.old && old.lastName ? old.lastName : null %>">
                        <span class="login_error"> <%= locals.errors && errors.lastName ? errors.lastName.msg : null  %>  </span>
                        <span id="errorApellido" class="login_error"></span>
                    </div>
                    <div class="reg_sec_main_form-container">
                        <input type="email" name="email" id="email" placeholder="ingrese email" value="<%= locals.old && old.email ? old.email : null %>">
                        <span class="login_error"> <%= locals.errors && errors.email ? errors.email.msg : null  %>  </span>
                        <span id="errorEmail" class="login_error"></span>
                    </div>
                    <div class="reg_sec_main_form-container">
                        <input type="password" name="password" id="password" placeholder="ingrese password" >
                        <span class="login_error"> <%= locals.errors && errors.password ? errors.password.msg : null  %></span>
                        <span id="errorPassword" class="login_error"></span>
                        <!-- <div class="password-visible">
                            <i class="fas fa-eye" onclick="password_visible('ocultar',this)"></i>
                            <i class="fas fa-eye-slash active"  onclick="password_visible('mostrar',this)"></i>
                        </div> -->
                        <div class="class-recommended " id="recommended">
                            <span>La contraseña debe ser de 6 a 12 caracteres.</span>
                            <br>
                            <span>La contraseña debe contener al menos un número.</span>
                            <br>
                            <span>La contraseña debe contener al menos una mayúscula y una minúscula.</span>
                        </div>
                    </div>
                    <div class="reg_sec_main_form-container">
                        <input type="password" name="password2" id="password2" placeholder="confirme su password " >
                        <span class="login_error"> <%= locals.errors && errors.password2 ? errors.password2.msg : null  %>  </span>
                        <span id="errorPassword2" class="login_error"></span>
                    <!--  <div class="password-visible">
                            <i class="fas fa-eye" onclick="password_visible('ocultar',this)"></i>
                            <i class="fas fa-eye-slash active"  onclick="password_visible('mostrar',this)"></i>
                    </div> -->
                    </div>
                    <span id="errorForm" class="login_error"></span>
                    <div class="reg_sec_main_form-container">
                        <button type="submit">Iniciar Sesión</button>
                    </div>
                    <div class="reg_sec_main_form-container">
                        <span>Al hacer clic en Iniciar Sesión acepta nuestra</span>
                        <a href="">Declaración de privacidad</a>
                        <span>y</span>
                        <a href="">Términos y Condiciones</a>
                    </div>
                    
                </form>
            </main>
        </section>
        
        
    </main>

    <!-- ======================== BODY || MAQUETADO DEL fOOTER ======================== -->
    <%- include('./partials/footer') %>
    <script src="/javascripts/userRegister.js"></script>
    <!-- vinculo a la carpeta de js que esta en public -->
    <script src="/javascripts/passwordViews.js"></script>
</body>

</html>