
<!-- ========================= HEAD ============================ -->
<%- include('./partials/head', {title:"CrearProducto"})%>

<!-- ======================== HEADER =========================== -->
<body class="body--add">
    <%- include('./partials/header') %>

    <main class="main-add"> 
        <section class="section--add">
            <h1 class="form__title--add">Agregar producto</h1>
            <form action="/admin/add" method="POST" class="form__register-add">
                <div class="caja--product--add">
                    <!-- <input class="form--input" type="text" id="nombre" name="nombre" placeholder="agregar producto" > -->
                    <label for="nombre" class="label--add">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre">
                </div> 
                <div class="caja--product--add">
                    <!-- <input class="form--input" type="text" id="nombreDeUsuario" name="nombreDeUsuario" placeholder=" Nombre de Usuario"> -->
                    <label for="precio" class="label--add">Precio</label>
                    <input type="number" class="form-control" id="precio" name="precio">
                </div>
                <div class="caja--product--add">
                    <label for="descuento" class="label--add">Descuento</label>
                    <input type="number" class="form-control" id="descuento" name="descuento">
                    
                </div>
                <div class="caja--product--add">
                    <label for="altura" class="label--add">Altura</label>
                    <input type="number" class="form-control" id="altura" name="altura" placeholder="en centimetros">
                </div>
                <div class="caja--product--add">
                    <label for="material" class="label--add">Material</label>
                    <input type="text" class="form-control" id="material" name="material">
                </div>
                <div class="caja--product--add">
                    <label for="tiempo" class="label--add">Tiempo</label>
                    <input type="number" class="form-control" id="tiempo" name="tiempo" placeholder="en horas/minutos">
                </div>
                <div class="caja--product--add">
                    <label for="categoria" class="label--add">Categor√≠a</label>
                    <select class="form-select" aria-label="Default select example" id="categoria"
                        name="categoria">
                        <option value="" selected hidden>Seleccione...</option>
                        <option value="cat. 1">cat. 1</option>
                        <option value="cat. 2">cat. 2</option>
                        <option value="cat. 3">cat. 3</option>
                    </select>
                    </div>
                    
                <div class="tex--add">
                    <h4 class="Descripcion-add">Descripcion</h4>
                    <textarea class="detalle--textarea-add" name="descripcion" id="descripcion" cols="35" rows="3"></textarea>
                </div>
                </div>
                <div class="label--add">
                    <a class="imagen--product--add" href="">
                        <label class="form__button--imagen" for="imagen">Seleccione una imagen</label>
                    <input hidden class="form--input" type="file" id="imagen" name="imagen">
                    </a>
                </div>
                <div class="caja--product--add boton--cancelar--guardar">
                    <a href="/" class="form__button form__button--cancel">Cancelar</a>
                    <button class="form__button form__button--send" type="submit">Guardar</button>
                </div>
                


            </form>
        </section>
    </main>
</body>

